# II-Telegram-Agent Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED SETTINGS
# ============================================================

# Telegram Bot Token
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# LLM API Keys (set at least one)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Or use OpenAI: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_key_here

# Or use Google: https://makersuite.google.com/app/apikey
# GOOGLE_API_KEY=your_google_key_here

# Or use OpenRouter: https://openrouter.ai/keys
# OPENROUTER_API_KEY=your_openrouter_key_here

# ============================================================
# LLM CONFIGURATION
# ============================================================

# Default LLM provider (anthropic, openai, google, openrouter)
DEFAULT_PROVIDER=anthropic

# Default model to use
DEFAULT_MODEL=claude-sonnet-4-20250514

# Maximum tokens for responses
MAX_TOKENS=4096

# Temperature (0.0-1.0, higher = more creative)
TEMPERATURE=0.7

# ============================================================
# WEBHOOK CONFIGURATION (Optional)
# ============================================================

# Leave empty to use polling mode (simpler, works behind NAT)
# Set to your public URL for webhook mode (faster, requires public URL)
TELEGRAM_WEBHOOK_URL=

# Secret token for webhook verification
TELEGRAM_WEBHOOK_SECRET=

# ============================================================
# SECURITY SETTINGS
# ============================================================

# Admin password for API access
ADMIN_PASSWORD=changeme

# JWT secret for token signing (change in production!)
JWT_SECRET=change-this-secret-in-production

# Enable pairing mode for new users
# When true, new users must be approved before they can use the bot
PAIRING_ENABLED=true

# Comma-separated list of allowed Telegram user IDs or usernames
# Leave empty to allow all users (with pairing if enabled)
ALLOWED_USERS=

# Rate limit: maximum messages per minute per user
RATE_LIMIT_MESSAGES=30

# ============================================================
# TOOL SETTINGS
# ============================================================

# Tavily API key for web search (optional but recommended)
# Get from: https://tavily.com/
TAVILY_API_KEY=

# E2B API key for code execution sandboxes (optional)
# Get from: https://e2b.dev/
E2B_API_KEY=

# Enable/disable tools
ENABLE_WEB_SEARCH=true
ENABLE_BROWSER=true
ENABLE_CODE_EXECUTION=true
ENABLE_FILE_OPERATIONS=true

# ============================================================
# DATABASE SETTINGS
# ============================================================

# SQLite (default, good for small deployments)
DATABASE_URL=sqlite+aiosqlite:///./data/agent.db

# PostgreSQL (for larger deployments)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/iitelegram

# Redis for rate limiting and caching (optional)
REDIS_URL=

# ============================================================
# SERVER SETTINGS
# ============================================================

HOST=0.0.0.0
PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# Maximum messages to keep in context
MAX_CONTEXT_MESSAGES=50